<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:background="@color/white"
    android:elevation="4dp"
    android:padding="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_kategori_budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:padding="8dp"
        android:text="1. Pengeluaran Item"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="2dp"
        android:fontFamily="@font/roboto_bold"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:text="Rp. 19.000.000"
        android:textAlignment="textEnd"
        android:textColor="@color/btn_blue_icon"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_kategori_budget"
        app:layout_constraintEnd_toStartOf="@+id/btn_options_expenditure"
        app:layout_constraintStart_toEndOf="@+id/tv_title_kategori_budget"
        app:layout_constraintTop_toTopOf="@+id/tv_title_kategori_budget" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_options_expenditure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>