<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail_area_block.tab_layout.area_list_livestock.AreaListLivestockFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_block_livestock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_livestock_by_block_area" />

    <include
        android:id="@+id/data_empty"
        layout="@layout/data_empty" />

    <include
        android:id="@+id/loading"
        layout="@layout/loading" />

</androidx.constraintlayout.widget.ConstraintLayout>