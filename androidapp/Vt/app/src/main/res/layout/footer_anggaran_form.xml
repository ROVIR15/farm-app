<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tambah_anggaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:shapeAppearance=""
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/green_grass"
        android:fontFamily="@font/roboto_bold"
        android:text="Tambah Pengeluaran"
        android:textAllCaps="false"
        android:textColor="@color/green_text_button"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_blue_icon"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:padding="8dp"
            android:text="Rp. 20 Juta digunakan dari Rp.300 Juta"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:padding="8dp"
            android:text="Rp. 280.000.000"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>