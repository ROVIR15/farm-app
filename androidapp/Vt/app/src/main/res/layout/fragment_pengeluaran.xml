<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pengeluaran.PengeluaranFragment">

    <include
        android:id="@+id/pengeluaran_app_bar"
        layout="@layout/app_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Pilih Bulan dan Tahun"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iv_date_picker_pengeluaran"
            style="@style/Base.Widget.AppCompat.ImageButton"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/baseline_date_range_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_date_content_pengeluaran"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_edt_normal"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_date_picker_pengeluaran"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_date" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_pengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:overScrollMode="always"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_content_pengeluaran"
            tools:itemCount="4"
            tools:listitem="@layout/item_pengeluaran" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/footer_pengeluaran_form"
        layout="@layout/footer_pengeluaran_form" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>